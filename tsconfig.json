{
	"compilerOptions": {
		"inlineSources": true,
		"inlineSourceMap": true,
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "dev",
		"rootDir": ".",
		"strict": true,
		"target": "es5",
		"types": [
			"intern"
		],
		"allowJs": true
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
